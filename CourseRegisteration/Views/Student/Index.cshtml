@model IEnumerable<Students> ;
<div class="container">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                <ul class="nav-bar nav">
                     <li class="nav-item">
                        <a asp-controller="Student" asp-action="Create" class="nav-link">Create</a>
                    </li>
                </ul>
            </nav>
        </div>

    </nav>
</div>



<div class="card-deck">


    @foreach (var item in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@item.FirstName</h3>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Student" asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-primary">View</a>
                <a asp-controller="Student" asp-action="Update" asp-route-id="@item.StudentId" class="btn btn-primary">Edit</a>
                <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.StudentId</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
            </tr>
        }
    </tbody>
</table>

