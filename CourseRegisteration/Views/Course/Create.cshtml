@model Courses
@{
    ViewBag.Title = "Create Courses";

}

<form asp-controller="Course" asp-action="Create" method="post" class="mt-3">
     <div class="form-group row">
        <label asp-for="CourseNumber" class="col-sm-2 col-form-label"></label>
        <input asp-for="CourseNumber" class="form-control" placeholder="CourseNumber" />
        <span asp-validation-for="CourseNumber" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="CourseName" class="col-sm-2 col-form-label"></label>
        <input asp-for="CourseName" class="form-control" placeholder="FirstName" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <input asp-for="Description" class="form-control" placeholder="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>