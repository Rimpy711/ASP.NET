
@model Courses;
@{
    ViewBag.Title = "Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card-header">
            <h1>@Model.CourseId</h1>
        </div>
    </div>
    <div class="card-body text-center">
        <h4>Course Name: @Model.CourseName</h4>
        <h4>Course Number: @Model.CourseNumber</h4>
        <h4>Description: @Model.Description</h4>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Course" asp-action="index" class="btn btn-primary">Back</a>
        <a asp-controller="Course" asp-action="Update" asp-route-id="@Model.CourseId" class="btn btn-primary">Edit</a>
        <a asp-controller="Course" asp-action="Delete" asp-route-id="@Model.CourseId" class="btn btn-danger">Delete</a>

    </div>
</div>

@section Scripts {

    <script src="~/js/CustomScript.js"></script>

}