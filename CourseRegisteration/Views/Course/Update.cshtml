@model Courses
@{
    ViewBag.Title = "Update Courses";

}

<form asp-controller="Course" asp-action="Update" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.CourseId" class="col-sm-2 col-form-label"></label>

        <input asp-for="@Model.CourseId" class="form-control" placeholder="@Model.CourseId" />
        <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.CourseNumber" class="col-sm-2 col-form-label"></label>
        <input asp-for="@Model.CourseNumber" class="form-control" placeholder="@Model.CourseNumber" />
        <span asp-validation-for="@Model.CourseNumber" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.CourseName" class="col-sm-2 col-form-label"></label>
        <input asp-for="@Model.CourseName" class="form-control" placeholder="@Model.CourseName" />
        <span asp-validation-for="@Model.CourseName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-2 col-form-label"></label>
        <input asp-for="@Model.Description" class="form-control" placeholder="@Model.Description" />
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>